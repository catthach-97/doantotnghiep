<%- include('./includes/head.ejs') %>
<style>
    .form-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .input-group {
        position: relative;
    }
    .input-icon {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: #6b7280;
        z-index: 10;
    }
    .input-field {
        padding-left: 48px;
    }
    .floating-label {
        position: absolute;
        left: 48px;
        top: 50%;
        transform: translateY(-50%);
        color: #6b7280;
        transition: all 0.3s ease;
        pointer-events: none;
        background: white;
        padding: 0 4px;
    }
    .input-field:focus + .floating-label,
    .input-field:not(:placeholder-shown) + .floating-label {
        top: 0;
        font-size: 12px;
        color: #3b82f6;
    }
    .card-hover {
        transition: all 0.3s ease;
    }
    .card-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
</style>
</head>
<body class="bg-gradient-to-br from-gray-50 to-blue-50 min-h-screen">
    <%- include('./includes/navigation.ejs') %>
    
    <main class="max-w-4xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="form-gradient rounded-2xl shadow-2xl overflow-hidden mb-8">
            <div class="px-8 py-12 text-center text-white">
                <div class="w-20 h-20 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="ri-edit-line text-4xl"></i>
                </div>
                <h1 class="text-3xl font-bold mb-2">Chỉnh sửa thông tin cá nhân</h1>
                <p class="text-lg opacity-90">Cập nhật thông tin tài khoản của bạn</p>
            </div>
        </div>

        <!-- Form Container -->
        <div class="bg-white rounded-2xl shadow-lg p-8 card-hover">
            <!-- Alert Messages -->
            <% if (error) { %>
                <div class="bg-red-50 border border-red-200 text-red-700 px-6 py-4 rounded-xl mb-6 flex items-center gap-3">
                    <i class="ri-error-warning-line text-xl"></i>
                    <span><%= error %></span>
                </div>
            <% } %>
            <% if (success) { %>
                <div id="success-popup" class="bg-green-50 border border-green-200 text-green-700 px-6 py-4 rounded-xl mb-6 flex items-center gap-3">
                    <i class="ri-check-line text-xl"></i>
                    <span><%= success %></span>
                </div>
                <script>
                    setTimeout(function() {
                        window.location.href = '/profile';
                    }, 2000);
                </script>
            <% } %>

            <form action="/profile/edit" method="POST" class="space-y-8">
                <!-- Personal Information Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                        <i class="ri-user-settings-line text-blue-600"></i>
                        Thông tin cá nhân
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Name Field -->
                        <div class="input-group">
                            <i class="ri-user-line input-icon"></i>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                value="<%= user.name %>" 
                                required 
                                placeholder=" "
                                class="w-full border-2 border-gray-200 rounded-xl px-4 py-4 input-field focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300"
                            >
                            <label for="name" class="floating-label">Họ và tên *</label>
                        </div>

                        <!-- Phone Field -->
                        <div class="input-group">
                            <i class="ri-phone-line input-icon"></i>
                            <input 
                                type="tel" 
                                id="phone" 
                                name="phone" 
                                value="<%= user.phone || '' %>" 
                                pattern="[0-9]{10,11}"
                                placeholder=" "
                                class="w-full border-2 border-gray-200 rounded-xl px-4 py-4 input-field focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300"
                            >
                            <label for="phone" class="floating-label">Số điện thoại</label>
                        </div>
                    </div>

                    <!-- Address Field -->
                    <div class="input-group mt-6">
                        <i class="ri-map-pin-line input-icon"></i>
                        <input 
                            type="text" 
                            id="address" 
                            name="address" 
                            value="<%= user.address || '' %>" 
                            placeholder=" "
                            class="w-full border-2 border-gray-200 rounded-xl px-4 py-4 input-field focus:outline-none focus:border-blue-500 focus:ring-4 focus:ring-blue-100 transition-all duration-300"
                        >
                        <label for="address" class="floating-label">Địa chỉ</label>
                    </div>
                </div>

                <!-- Account Information Section -->
                <div class="border-b border-gray-200 pb-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                        <i class="ri-account-circle-line text-green-600"></i>
                        Thông tin tài khoản
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Email Field (Read-only) -->
                        <div class="input-group">
                            <i class="ri-mail-line input-icon"></i>
                            <input 
                                type="email" 
                                value="<%= user.email %>" 
                                readonly
                                class="w-full border-2 border-gray-200 rounded-xl px-4 py-4 input-field bg-gray-50 cursor-not-allowed"
                            >
                            <label class="floating-label" style="top: 0; font-size: 12px; color: #6b7280;">Email (không thể thay đổi)</label>
                        </div>

                        <!-- Role Field (Read-only) -->
                        <div class="input-group">
                            <i class="ri-shield-check-line input-icon"></i>
                            <input 
                                type="text" 
                                value="<%= user.role === 'admin' ? 'Quản trị viên' : 'Thành viên' %>" 
                                readonly
                                class="w-full border-2 border-gray-200 rounded-xl px-4 py-4 input-field bg-gray-50 cursor-not-allowed"
                            >
                            <label class="floating-label" style="top: 0; font-size: 12px; color: #6b7280;">Vai trò</label>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-end pt-6">
                    <a href="/profile" class="px-8 py-4 rounded-xl bg-gray-100 text-gray-700 font-semibold hover:bg-gray-200 transition flex items-center justify-center gap-2">
                        <i class="ri-arrow-left-line"></i>
                        Quay lại
                    </a>
                    <button type="submit" class="px-8 py-4 rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold hover:from-blue-700 hover:to-purple-700 transition flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                        <i class="ri-save-line"></i>
                        Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>

        <!-- Quick Links -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="/profile/change-password" class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition flex items-center gap-4 card-hover">
                <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                    <i class="ri-lock-password-line text-red-600 text-xl"></i>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-900">Đổi mật khẩu</h3>
                    <p class="text-sm text-gray-500">Cập nhật mật khẩu tài khoản</p>
                </div>
            </a>

            <a href="/orders" class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition flex items-center gap-4 card-hover">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <i class="ri-shopping-bag-line text-purple-600 text-xl"></i>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-900">Đơn hàng</h3>
                    <p class="text-sm text-gray-500">Xem lịch sử đơn hàng</p>
                </div>
            </a>

            <a href="/favorites" class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition flex items-center gap-4 card-hover">
                <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center">
                    <i class="ri-heart-line text-pink-600 text-xl"></i>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-900">Yêu thích</h3>
                    <p class="text-sm text-gray-500">Sản phẩm đã yêu thích</p>
                </div>
            </a>
        </div>
    </main>

    <%- include('./includes/end.ejs') %> 