<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> - Shoe Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <style>
        .sidebar-transition {
            transition: transform 0.3s ease-in-out;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div id="sidebar" class="bg-blue-900 text-white w-64 sidebar-transition transform -translate-x-full lg:translate-x-0 fixed lg:static inset-y-0 z-50">
            <!-- Sidebar Header -->
              <div class="flex items-center justify-center h-16 bg-gradient-to-r from-blue-700 to-blue-800 border-b border-blue-600/50">
                <a href="/admin/dashboard" class="flex items-center space-x-2 text-white">
                    <i class="ri-store-2-line text-2xl text-blue-200"></i>
                    <span class="text-2xl font-bold">Shoe Store</span>
                </a>
            </div>
            
            <!-- Sidebar Navigation -->
            <nav class="mt-5 px-2">
                <div class="space-y-1">
                    <!-- Dashboard -->
                    <a href="/admin/dashboard" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md transition-colors <%= path === '/admin/dashboard' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-white hover:bg-blue-700 hover:text-white' %>">
                        <i class="ri-dashboard-line mr-3 text-lg <%= path === '/admin/dashboard' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Dashboard
                    </a>
                    
                    <!-- Products -->
                    <a href="/admin/products" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md transition-colors <%= path === '/admin/products' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-white hover:bg-blue-700 hover:text-white' %>">
                        <i class="ri-shopping-bag-line mr-3 text-lg <%= path === '/admin/products' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Quản lý sản phẩm
                    </a>
                    
                    <!-- Orders -->
                    <a href="/admin/orders" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md transition-colors <%= path === '/admin/orders' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-white hover:bg-blue-700 hover:text-white' %>">
                        <i class="ri-file-list-3-line mr-3 text-lg <%= path === '/admin/orders' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Đơn hàng
                    </a>
                    
                    <!-- Accounts -->
                    <a href="/admin/accounts" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md transition-colors <%= path === '/admin/accounts' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-white hover:bg-blue-700 hover:text-white' %>">
                        <i class="ri-user-line mr-3 text-lg <%= path === '/admin/accounts' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Tài khoản
                    </a>
                    
                    <!-- Categories -->
                    <a href="/admin/categories" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md transition-colors <%= path === '/admin/categories' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-white hover:bg-blue-700 hover:text-white' %>">
                        <i class="ri-folder-line mr-3 text-lg <%= path === '/admin/categories' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Danh mục
                    </a>
                    
                    <!-- Brands -->
                    <a href="/admin/brands" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md transition-colors <%= path === '/admin/brands' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-white hover:bg-blue-700 hover:text-white' %>">
                        <i class="ri-award-line mr-3 text-lg <%= path === '/admin/brands' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Thương hiệu
                    </a>
                    
                    <!-- Reviews -->
                    <a href="/admin/reviews" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md transition-colors <%= path === '/admin/reviews' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-white hover:bg-blue-700 hover:text-white' %>">
                        <i class="ri-star-line mr-3 text-lg <%= path === '/admin/reviews' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Đánh giá
                    </a>
                    
                    <!-- Slide Banner -->
                    <a href="/admin/slides" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md transition-colors <%= path === '/admin/slides' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-white hover:bg-blue-700 hover:text-white' %>">
                        <i class="ri-image-line mr-3 text-lg <%= path === '/admin/slides' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Slide Banner
                    </a>
                    
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-white shadow-sm border-b border-gray-200">
                <div class="flex items-center justify-between px-6 py-4">
                    <div class="flex items-center space-x-4">
                        <button id="sidebar-toggle" class="lg:hidden text-gray-600 hover:text-gray-900">
                            <i class="ri-menu-line text-xl"></i>
                        </button>
                        <h1 class="text-2xl font-semibold text-gray-900"><%= pageTitle %></h1>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <button class="flex items-center space-x-2 text-gray-700 hover:text-gray-900">
                                <i class="ri-notification-line text-xl"></i>
                            </button>
                        </div>
                        <div class="relative">
                            <div class="flex items-center space-x-3">
                                <div class="text-right">
                                    <p class="text-sm font-medium text-gray-900"><%= user ? user.name : 'Admin' %></p>
                                    <p class="text-xs text-gray-500">Quản trị viên</p>
                                </div>
                                <div class="relative">
                                    <button class="flex items-center space-x-2 text-gray-700 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" onclick="toggleUserMenu()">
                                        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                                            <i class="ri-user-line text-white text-sm"></i>
                                        </div>
                                        <i class="ri-arrow-down-s-line h-4 w-4"></i>
                                    </button>
                                    <div id="userMenu" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 ring-1 ring-black ring-opacity-5 focus:outline-none hidden">
                                        <a href="/admin/profile" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                            <i class="ri-user-line mr-3 text-gray-400"></i>
                                            Profile
                                        </a>
                                        <a href="/admin/settings" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                            <i class="ri-settings-3-line mr-3 text-gray-400"></i>
                                            Settings
                                        </a>
                                        <hr class="my-1">
                                        <a href="/logout" class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-gray-100">
                                            <i class="ri-logout-box-line mr-3 text-red-500"></i>
                                            Đăng xuất
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50">
                <div class="px-6 py-8">
                    <%- body %>
                </div>
            </main>
        </div>
    </div>

    <!-- Mobile Sidebar Overlay -->
    <div id="sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden lg:hidden"></div>

    <!-- Scripts -->
    <script>
        // User dropdown toggle
        function toggleUserMenu() {
            const userMenu = document.getElementById('userMenu');
            userMenu.classList.toggle('hidden');
        }

        // Close user menu when clicking outside
        document.addEventListener('click', function(event) {
            const userMenu = document.getElementById('userMenu');
            const userMenuButton = event.target.closest('[onclick="toggleUserMenu()"]');
            
            if (!userMenuButton && !userMenu.contains(event.target)) {
                userMenu.classList.add('hidden');
            }
        });

        // Sidebar toggle
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebar-toggle');
            const sidebar = document.getElementById('sidebar');
            const sidebarOverlay = document.getElementById('sidebar-overlay');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('-translate-x-full');
                    sidebarOverlay.classList.toggle('hidden');
                });
            }

            if (sidebarOverlay) {
                sidebarOverlay.addEventListener('click', function() {
                    sidebar.classList.add('-translate-x-full');
                    sidebarOverlay.classList.add('hidden');
                });
            }
        });
    </script>
</body>
</html>
