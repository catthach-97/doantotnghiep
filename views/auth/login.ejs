<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico:wght@400&display=swap" rel="stylesheet">
    </head>

    <body class="login-page">
        <div class="login-container">
            <a href="/" class="back-to-home">
                <i class="ri-arrow-left-line"></i>
                Quay lại trang chủ
            </a>
            <div class="login-card floating">
                <div class="login-header">
                    <a href="/" class="brand-logo">
                        <i class="ri-store-line brand-icon"></i>
                        <span class="brand-text">Shoe Store</span>
                    </a>
                    <h1 class="login-title">Đăng nhập</h1>
                    <p class="login-subtitle">Đăng nhập vào tài khoản của bạn để tiếp tục</p>
                </div>
                
                <% if (error) { %>
                    <div class="error-message">
                        <i class="ri-error-warning-line error-icon"></i>
                        <span><%= error %></span>
                    </div>
                <% } %>
                
                <form class="login-form" action="/login" method="POST">
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" required autocomplete="username"
                               placeholder="Nhập email của bạn"
                               class="form-input">
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input type="password" name="password" id="password" required autocomplete="current-password"
                               placeholder="Nhập mật khẩu của bạn"
                               class="form-input">
                    </div>
                    <button type="submit" class="login-btn">
                        <i class="ri-login-box-line" style="margin-right: 8px;"></i>
                        Đăng nhập
                    </button>
                </form>
                
                <div class="signup-link">
                    <a href="/signup">Chưa có tài khoản? Đăng ký ngay</a>
                </div>
            </div>
        </div>

        <%- include('../includes/end.ejs') %>