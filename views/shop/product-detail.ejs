<script>
// Đánh giá sản phẩm
if (document.getElementById('reviewForm')) {
    const stars = document.querySelectorAll('#starRating i');
    const ratingInput = document.getElementById('ratingInput');
    stars.forEach(star => {
        star.addEventListener('click', function() {
            const value = this.getAttribute('data-value');
            ratingInput.value = value;
            stars.forEach((s, idx) => {
                if (idx < value) {
                    s.classList.add('ri-star-fill', 'text-yellow-400');
                    s.classList.remove('ri-star-line');
                } else {
                    s.classList.remove('ri-star-fill', 'text-yellow-400');
                    s.classList.add('ri-star-line');
                }
            });
        });
    });
    document.getElementById('reviewForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const rating = ratingInput.value;
        const comment = document.getElementById('commentInput').value;
        const productId = '<%= product._id %>';
        const msg = document.getElementById('reviewMsg');
        msg.textContent = '';
        try {
            const res = await fetch(`/products/${productId}/review`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ rating, comment })
            });
            const data = await res.json();
            if (data.success) {
                msg.textContent = 'Cảm ơn bạn đã đánh giá!';
                msg.className = 'text-green-600';
                setTimeout(() => window.location.reload(), 1000);
            } else {
                msg.textContent = data.message || 'Có lỗi xảy ra.';
                msg.className = 'text-red-600';
            }
        } catch (err) {
            msg.textContent = 'Có lỗi xảy ra khi gửi đánh giá!';
            msg.className = 'text-red-600';
        }
    });
}
</script>