                                            <% } else if (relatedProduct.stockQuantity > 0) { %>
                                                <span class="text-yellow-600 font-medium">
                                                    <i class="ri-error-warning-line"></i> Sắp hết
                                                </span>
                                            <% } else { %>
                                                <span class="text-red-600 font-medium">
                                                    <i class="ri-close-circle-line"></i> Hết hàng
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <!-- Giá -->
                                    <div class="mb-3">
                                        <% if (relatedProduct.oldPrice) { %>
                                            <del class="text-gray-500 text-sm mr-2">
                                                <%= relatedProduct.oldPrice.toLocaleString('vi-VN') %> ₫
                                            </del>
                                        <% } %>
