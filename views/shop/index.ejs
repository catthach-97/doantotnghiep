<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Store - Cửa hàng giày thời trang</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Remix Icon -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css" rel="stylesheet">
    
    <!-- ECharts -->
    <script src="https://cdn.jsdelivr.net/npm/echarts@5.4.3/dist/echarts.min.js"></script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: 'rgba(87, 181, 231, 1)',
                        'primary-dark': 'rgba(67, 161, 211, 1)'
                    },
                    fontFamily: {
                        'pacifico': ['Pacifico', 'cursive']
                    },
                    borderRadius: {
                        'button': '12px'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <%- include('../includes/navigation', { user, isAdmin, isAuthenticated, path, cartCount }) %>

<!-- Hero Section -->
<section class="relative bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-20">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-6 fade-in">Chào mừng đến với Shoe Store</h1>
            <p class="text-xl mb-8 opacity-90">Nơi tìm kiếm những đôi giày hoàn hảo cho phong cách của bạn</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/products" class="btn-primary px-8 py-3 rounded-lg font-semibold transition-all duration-300 hover:scale-105">
                    Khám phá giày
                </a>
                <a href="#categories" class="btn-secondary px-8 py-3 rounded-lg font-semibold border-2 border-white text-white hover:bg-white hover:text-indigo-600 transition-all duration-300">
                    Xem danh mục
                </a>
            </div>
        </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-gray-50 to-transparent"></div>
</section>

<!-- Categories Section -->
<section id="categories" class="py-16">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Danh mục giày</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Khám phá các loại giày chất lượng cao cho mọi phong cách</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <% if (categories && categories.length > 0) { %>
                <% categories.forEach((category, index) => { %>
                    <div class="category-card bg-white rounded-xl shadow-lg p-6 text-center hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
                        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <span class="text-2xl"><%= category.icon || '👟' %></span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= category.name %></h3>
                        <p class="text-gray-600 mb-4"><%= category.description || 'Không có mô tả' %></p>
                        <a href="/products?category=<%= category.slug %>" class="text-blue-600 font-medium hover:text-blue-800 transition-colors">Xem thêm →</a>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full text-center py-12">
                    <div class="text-gray-400 text-6xl mb-4">👟</div>
                    <h3 class="text-xl font-semibold text-gray-600 mb-2">Chưa có danh mục nào</h3>
                    <p class="text-gray-500">Danh mục sản phẩm sẽ xuất hiện ở đây</p>
                </div>
            <% } %>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<% if (featuredProducts && featuredProducts.length > 0) { %>
<section class="py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Giày mới nhất</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Những đôi giày mới nhất được thêm vào cửa hàng</p>
        </div>
        
        <div class="product-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <% featuredProducts.forEach((product, index) => { %>
            <div class="product-card bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
                <div class="relative">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="w-full h-64 object-cover rounded-xl shadow">
                    <% if (index < 3) { %>
                        <div class="absolute top-2 right-2">
                            <span class="bg-green-500 text-white px-2 py-1 rounded-full text-xs font-medium">Mới</span>
                        </div>
                    <% } %>
                    <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
                        <button class="favorite-btn absolute top-2 left-2 w-8 h-8 bg-white rounded-full flex items-center justify-center shadow-md hover:bg-gray-50 transition-colors text-2xl z-10 <%= favorites && favorites.includes(product._id.toString()) ? 'text-red-500' : 'text-gray-400' %>"
                            data-product-id="<%= product._id %>"
                            aria-label="Yêu thích">
                            <i class="<%= favorites && favorites.includes(product._id.toString()) ? 'ri-heart-fill' : 'ri-heart-line' %>"></i>
                        </button>
                    <% } else { %>
                        <a href="/login?returnTo=/" class="absolute top-2 left-2 w-8 h-8 bg-white rounded-full flex items-center justify-center shadow-md text-2xl z-10 text-gray-400" aria-label="Yêu thích">
                            <i class="ri-heart-line"></i>
                        </a>
                    <% } %>
                </div>
                <div class="p-4">
                    <h3 class="text-base font-semibold text-gray-800 mb-2" style="white-space: nowrap; overflow: visible; word-break: keep-all;"><%= product.title %></h3>
                    <p class="text-gray-600 text-xs mb-3" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; word-break: keep-all;"><%= product.description %></p>
                    <div class="flex items-center justify-between">
                        <span class="text-xl font-bold text-blue-600"><%= product.price.toLocaleString('vi-VN') %>đ</span>
                        <a href="/products/<%= product._id %>" class="btn-primary px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 hover:scale-105 bg-indigo-600 text-white hover:bg-blue-700 flex items-center gap-1">
                            <i class="ri-eye-line mr-1"></i>
                            Chi tiết
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-12">
            <a href="/products" class="btn-primary px-8 py-3 rounded-lg font-semibold transition-all duration-300 hover:scale-105">
                Xem tất cả giày
            </a>
        </div>
    </div>
</section>
<% } %>

<!-- Features Section -->
<section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Tại sao chọn Shoe Store?</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Chúng tôi cam kết mang đến những đôi giày chất lượng tốt nhất</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="ri-shield-check-line text-2xl text-blue-600"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-3">Chất lượng đảm bảo</h3>
                <p class="text-gray-600">Tất cả giày đều được kiểm tra chất lượng nghiêm ngặt và sử dụng chất liệu cao cấp</p>
            </div>
            
            <div class="text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="ri-truck-line text-2xl text-green-600"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-3">Giao hàng miễn phí</h3>
                <p class="text-gray-600">Miễn phí vận chuyển cho đơn hàng từ 500.000đ và giao hàng trong 24h</p>
            </div>
            
            <div class="text-center">
                <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="ri-customer-service-2-line text-2xl text-purple-600"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-3">Đổi trả dễ dàng</h3>
                <p class="text-gray-600">Chính sách đổi trả 30 ngày nếu giày không vừa hoặc không đúng mô tả</p>
            </div>
        </div>
    </div>
</section>


<% if (typeof signupSuccess !== 'undefined' && signupSuccess) { %>
  <div id="signup-success-popup" class="fixed inset-0 flex items-center justify-center z-50">
    <div class="bg-white border border-green-400 rounded-lg shadow-lg p-8 max-w-sm w-full text-center">
      <div class="text-green-600 text-3xl mb-2"><i class="ri-checkbox-circle-line"></i></div>
      <div class="text-lg font-semibold mb-2">Đăng ký thành công!</div>
      <div class="text-gray-600 mb-4">Chào mừng bạn đến với Shoe Store. Hãy kiểm tra email để xác nhận tài khoản.</div>
      <button onclick="document.getElementById('signup-success-popup').remove(); location.reload();" class="mt-2 px-6 py-2 bg-indigo-600 text-white rounded-lg font-medium hover:bg-blue-700 transition">Đóng</button>
    </div>
  </div>
<% } %>

<script>
// Initialize any page-specific functionality
document.addEventListener('DOMContentLoaded', function() {
    // Add fade-in animation to elements
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('fade-in');
            }
        });
    }, observerOptions);
    
    // Observe category cards and product cards
    document.querySelectorAll('.category-card, .product-card').forEach(card => {
        observer.observe(card);
    });

    document.querySelectorAll('.favorite-btn').forEach(btn => {
        btn.addEventListener('click', async function(e) {
            e.preventDefault();
            const productId = this.dataset.productId;
            const icon = this.querySelector('i');
            const isFavorite = icon.classList.contains('ri-heart-fill');
            try {
                if (!isFavorite) {
                    const res = await fetch(`/favorites/${productId}`, { method: 'POST', headers: { 'Content-Type': 'application/json' } });
                    if (res.ok) {
                        icon.classList.remove('ri-heart-line', 'text-gray-400');
                        icon.classList.add('ri-heart-fill', 'text-red-500');
                    }
                } else {
                    const res = await fetch(`/favorites/${productId}`, { method: 'DELETE', headers: { 'Content-Type': 'application/json' } });
                    if (res.ok) {
                        icon.classList.remove('ri-heart-fill', 'text-red-500');
                        icon.classList.add('ri-heart-line', 'text-gray-400');
                    }
                }
            } catch (err) {
                alert('Có lỗi xảy ra khi thao tác yêu thích!');
            }
        });
    });
});
</script>

    <!-- Footer -->
    <%- include('../includes/footer.ejs') %>
    
    <!-- Custom JavaScript -->
    <script src="/js/main.js"></script>
</body>
</html>




