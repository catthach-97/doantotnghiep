        }

        function deleteReview(reviewId) {
            if (confirm('Bạn có chắc muốn xóa đánh giá này?')) {
                // Thêm loading state
                const deleteButton = event.target.closest('button');
                const originalContent = deleteButton.innerHTML;
                deleteButton.innerHTML = '<i class="ri-loader-4-line animate-spin"></i>';
                deleteButton.disabled = true;
                
                fetch('/admin/reviews/delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ reviewId: reviewId })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        // Xóa row khỏi table thay vì reload toàn trang
                        const row = deleteButton.closest('tr');
                        if (row) {
                            row.style.transition = 'opacity 0.3s ease';
                            row.style.opacity = '0';
                            setTimeout(() => {
                                row.remove();
                                updateStats();
                            }, 300);
                        }
                        showNotification('Xóa đánh giá thành công', 'success');
                    } else {
                        throw new Error(data.message || 'Không thể xóa đánh giá');
                    }
                })
                .catch(error => {
                    console.error('❌ Delete error:', error);
                    console.error('❌ Error message:', error.message);
                    console.error('❌ Error stack:', error.stack);
                    
                    // Kiểm tra loại lỗi
                    if (error.message.includes('Response is not JSON')) {
                        showNotification('Lỗi: Server trả về HTML thay vì JSON. Có thể cần đăng nhập lại.', 'error');
                    } else if (error.message.includes('HTTP 302')) {
                        showNotification('Lỗi: Đang redirect đến login. Vui lòng đăng nhập lại.', 'error');
                    } else if (error.message.includes('HTTP 404')) {
                        showNotification('Lỗi: Không tìm thấy API endpoint.', 'error');
                    } else if (error.message.includes('HTTP 500')) {
                        showNotification('Lỗi: Server gặp sự cố. Vui lòng thử lại sau.', 'error');
                    } else {
                        showNotification('Lỗi khi xóa đánh giá: ' + error.message, 'error');
                    }
                })
                .finally(() => {
                    // Khôi phục button
                    deleteButton.innerHTML = originalContent;
                    deleteButton.disabled = false;
                });
            }
        }

        function updateReviewStatus(reviewId, approved) {
            // Thêm loading state
            const approveButton = event.target.closest('button');
            const originalContent = approveButton.innerHTML;
            approveButton.innerHTML = '<i class="ri-loader-4-line animate-spin"></i>';
            approveButton.disabled = true;
            
            fetch('/admin/reviews/update-status', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ 
                    reviewId: reviewId, 
                    approved: approved.toString() 
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    // Cập nhật UI thay vì reload
                    const row = approveButton.closest('tr');
                    const statusCell = row.querySelector('td:nth-child(6)'); // Status column
                    if (statusCell) {
                        statusCell.innerHTML = approved ? 
                            '<span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Đã duyệt</span>' :
                            '<span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Chờ duyệt</span>';
                    }
                    showNotification(approved ? 'Duyệt đánh giá thành công' : 'Hủy duyệt đánh giá thành công', 'success');
                } else {
                    throw new Error(data.message || 'Không thể cập nhật trạng thái');
                }
            })
            .catch(error => {
                console.error('❌ Update status error:', error);
                console.error('❌ Error message:', error.message);
                console.error('❌ Error stack:', error.stack);
                
                // Kiểm tra loại lỗi
                if (error.message.includes('Response is not JSON')) {
                    showNotification('Lỗi: Server trả về HTML thay vì JSON. Có thể cần đăng nhập lại.', 'error');
                } else if (error.message.includes('HTTP 302')) {
                    showNotification('Lỗi: Đang redirect đến login. Vui lòng đăng nhập lại.', 'error');
                } else if (error.message.includes('HTTP 404')) {
                    showNotification('Lỗi: Không tìm thấy API endpoint.', 'error');
                } else if (error.message.includes('HTTP 500')) {
                    showNotification('Lỗi: Server gặp sự cố. Vui lòng thử lại sau.', 'error');
                } else {
                    showNotification('Lỗi khi cập nhật trạng thái: ' + error.message, 'error');
                }
            })
            .finally(() => {
                // Khôi phục button
                approveButton.innerHTML = originalContent;
                approveButton.disabled = false;
            });
        }

