<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Sản Phẩm - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <style>
        .sidebar {
            background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
        }
        .sidebar-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        .sidebar-item.active {
            background: linear-gradient(to right, #2563eb, #1d4ed8);
            color: white;
            font-weight: 600;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        .sidebar-item.active i {
            color: white;
        }
        
        /* User dropdown menu styles */
        #user-menu-button {
            cursor: pointer;
        }
        
        #user-menu-button:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }
        
        #user-menu {
            animation: fadeIn 0.2s ease-in-out;
        }
        
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* User menu items hover effect */
        #user-menu a:hover,
        #user-menu button:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }
        
        /* Gradient cards */
        .gradient-card-1 {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .gradient-card-2 {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        .gradient-card-3 {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        .gradient-card-4 {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }
        
        .gradient-card {
            color: white;
            border: none;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .gradient-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
        
        .gradient-card .icon-bg {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
        }
        
        .gradient-card .text-white {
            color: white !important;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 text-white flex flex-col">
            <!-- Logo -->
               <div class="flex items-center justify-center h-16 bg-gradient-to-r from-blue-700 to-blue-800 border-b border-blue-600/50">
                <a href="/admin/dashboard" class="flex items-center space-x-2 text-white">
                    <i class="ri-store-2-line text-2xl text-blue-200"></i>
                    <span class="text-2xl font-bold">Shoe Store</span>
                </a>
            </div>
            
            <!-- Navigation -->
            <nav class="flex-1 p-4">
                <ul class="space-y-2">
                    <li>
                        <a href="/admin/dashboard" class="sidebar-item flex items-center px-4 py-3 rounded-lg transition-colors">
                            <i class="ri-dashboard-line mr-3"></i>
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/admin/products" class="sidebar-item active flex items-center px-4 py-3 rounded-lg transition-colors">
                            <i class="ri-shopping-bag-line mr-3"></i>
                            Quản lý sản phẩm
                        </a>
                    </li>
                    <li>
                        <a href="/admin/orders" class="sidebar-item flex items-center px-4 py-3 rounded-lg transition-colors">
                            <i class="ri-file-list-line mr-3"></i>
                            Đơn hàng
                        </a>
                    </li>
                    <li>
                        <a href="/admin/accounts" class="sidebar-item flex items-center px-4 py-3 rounded-lg transition-colors">
                            <i class="ri-user-line mr-3"></i>
                            Tài khoản
                        </a>
                    </li>
                    <li>
                        <a href="/admin/categories" class="sidebar-item flex items-center px-4 py-3 rounded-lg transition-colors">
                            <i class="ri-folder-line mr-3"></i>
                            Danh mục
                        </a>
                    </li>
                    <li>
                        <a href="/admin/brands" class="sidebar-item flex items-center px-4 py-3 rounded-lg transition-colors">
                            <i class="ri-price-tag-3-line mr-3"></i>
                            Thương hiệu
                        </a>
                    </li>
                    <li>
                        <a href="/admin/reviews" class="sidebar-item flex items-center px-4 py-3 rounded-lg transition-colors">
                            <i class="ri-star-line mr-3"></i>
                            Đánh giá
                        </a>
                    </li>
                    <li>
                        <a href="/admin/slides" class="sidebar-item flex items-center px-4 py-3 rounded-lg transition-colors">
                            <i class="ri-image-line mr-3"></i>
                            Slide Banner
                        </a>
                    </li>
                </ul>
            </nav>
            
            <!-- User Profile -->
            <div class="p-4 border-t border-blue-600">
                <div class="flex items-center">
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center mr-3">
                        <i class="ri-user-line text-white"></i>
                    </div>
                    <div>
                        <div class="text-sm font-medium"><%= user ? user.name : 'Admin' %></div>
                        <div class="text-xs text-blue-200"><%= user ? user.email : 'admin@example.com' %></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Header -->
            <header class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
        <div class="flex items-center justify-between">
            <div>
                        <h1 class="text-2xl font-bold text-gray-900">Quản lý sản phẩm</h1>
                    </div>
                    <div class="flex items-center space-x-4">
                        <button class="p-2 text-gray-500 hover:text-gray-700">
                            <i class="ri-notification-line text-xl"></i>
                        </button>
                        <!-- User Dropdown -->
                        <div class="relative">
                            <button id="user-menu-button" class="flex items-center space-x-2 text-sm font-medium text-gray-700 hover:bg-gray-50 rounded-md px-3 py-2 transition-colors">
                                <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                                    <i class="ri-user-line text-gray-600"></i>
                                </div>
                                <span><%= user ? user.name : 'Admin' %></span>
                                <i class="ri-arrow-down-s-line text-gray-500"></i>
                            </button>
                            
                            <!-- Dropdown Menu -->
                            <div id="user-menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 border border-gray-200">
                                <a href="/admin/profile" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="ri-user-line mr-3 text-gray-400"></i>
                                    Profile
                                </a>
                                <a href="/admin/settings" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="ri-settings-line mr-3 text-gray-400"></i>
                                    Settings
                                </a>
                                <div class="border-t border-gray-100 my-1"></div>
                                <a href="/logout" class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                    <i class="ri-logout-box-line mr-3 text-red-500"></i>
                                    Đăng xuất
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
                <!-- Page Header -->
                <div class="mb-6">
                    <div class="flex justify-between items-center mb-2">
                        <h2 class="text-3xl font-bold text-gray-900">Quản lý sản phẩm</h2>
                        <div class="flex gap-3">
                            <a href="/admin/add-product" 
                               class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                                <i class="ri-add-line mr-2"></i>
                                Thêm sản phẩm mới
                            </a>
                        </div>
                    </div>
                    <p class="text-gray-600">Theo dõi và quản lý sản phẩm trong cửa hàng</p>
                </div>


                <!-- Summary Cards -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
                    <div class="gradient-card gradient-card-1 p-6 rounded-lg">
                        <div class="flex items-center">
                            <div class="p-3 icon-bg rounded-lg">
                                <i class="ri-shopping-bag-line text-white text-xl"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-medium text-white opacity-90">Tổng sản phẩm</p>
                                <p class="text-2xl font-bold text-white"><%= allProducts.length %></p>
                            </div>
                        </div>
                    </div>
                    <div class="gradient-card gradient-card-2 p-6 rounded-lg">
                        <div class="flex items-center">
                            <div class="p-3 icon-bg rounded-lg">
                                <i class="ri-time-line text-white text-xl"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-medium text-white opacity-90">Hết hàng</p>
                                <p class="text-2xl font-bold text-white">
                                    <%= allProducts.filter(p => p.stockStatus === 'out_of_stock' || p.stockQuantity === 0).length %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="gradient-card gradient-card-3 p-6 rounded-lg">
                        <div class="flex items-center">
                            <div class="p-3 icon-bg rounded-lg">
                                <i class="ri-check-line text-white text-xl"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-medium text-white opacity-90">Còn hàng</p>
                                <p class="text-2xl font-bold text-white">
                                    <%= allProducts.filter(p => p.stockStatus === 'in_stock' || p.stockStatus === 'medium_stock' || p.stockStatus === 'low_stock').length %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="gradient-card gradient-card-4 p-6 rounded-lg">
                        <div class="flex items-center">
                            <div class="p-3 icon-bg rounded-lg">
                                <i class="ri-money-dollar-circle-line text-white text-xl"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-medium text-white opacity-90">Tổng giá trị</p>
                                <p class="text-2xl font-bold text-white">
                                    <%= allProducts.reduce((sum, p) => sum + (p.price * p.stockQuantity), 0).toLocaleString('vi-VN') %>₫
                                </p>
                            </div>
                        </div>
                    </div>
    </div>
    

                <!-- Search and Filter -->
                <div class="bg-white p-6 rounded-lg shadow-sm mb-6">
                    <form method="GET" action="/admin/products" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Tìm kiếm</label>
                            <input type="text" name="search" placeholder="Tên sản phẩm, SKU..." 
                                   value="<%= search || '' %>"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Danh mục</label>
                            <select name="category" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="">Tất cả danh mục</option>
                                <% if (categories && categories.length > 0) { %>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat.slug || cat._id %>" <%= (category === (cat.slug || cat._id)) ? 'selected' : '' %>>
                                            <%= cat.name || 'Danh mục không tên' %>
                                        </option>
                                    <% }); %>
                                <% } %>
                </select>
            </div>
            <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Thương hiệu</label>
                            <select name="brand" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="">Tất cả thương hiệu</option>
                                <% if (brands && brands.length > 0) { %>
                                    <% brands.forEach(brand => { %>
                                        <option value="<%= brand.name %>" <%= (brand === brand.name) ? 'selected' : '' %>>
                                            <%= brand.name %>
                                        </option>
                                    <% }); %>
                                <% } %>
                </select>
            </div>
            <div class="flex items-end">
                            <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center justify-center">
                                <i class="ri-search-line mr-2"></i>
                                Lọc
                            </button>
            </div>
                    </form>
    </div>
    
    <!-- Products Table -->
                <div class="bg-white rounded-lg shadow-sm">
        
                    <% if (products.length === 0) { %>
                        <div class="text-center py-12">
                            <i class="ri-shopping-bag-line text-gray-400 text-6xl mb-4"></i>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có sản phẩm nào</h3>
                            <p class="text-gray-500 mb-6">Sản phẩm sẽ xuất hiện ở đây khi bạn thêm mới</p>
                            <a href="/admin/add-product" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                <i class="ri-add-line mr-2"></i>Thêm sản phẩm
                            </a>
                        </div>
                    <% } else { %>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            MÃ SẢN PHẨM
                                        </th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            SẢN PHẨM
                                        </th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            THƯƠNG HIỆU
                                        </th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            GIÁ
                                        </th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            TỒN KHO
                                        </th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            TRẠNG THÁI
                                        </th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            THAO TÁC
                                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                                    <% products.forEach(function(product) { %>
                        <tr class="hover:bg-gray-50">
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900">
                                                <%= product.sku || 'Chưa có' %>
                                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                                    <div class="flex-shrink-0 h-10 w-10">
                                                        <% if (product.imageUrl) { %>
                                                            <img class="h-10 w-10 rounded-full object-cover" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                                        <% } else { %>
                                                            <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                                                                <i class="ri-image-line text-gray-500"></i>
                                                            </div>
                                                        <% } %>
                                    </div>
                                    <div class="ml-4">
                                                        <div class="text-sm font-medium text-gray-900">
                                                            <%= product.title %>
                                                        </div>
                                                        <div class="text-sm text-gray-500">
                                                            <%= product.category || 'Chưa có' %>
                                                        </div>
                                    </div>
                                </div>
                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                                <%= product.brand || 'Chưa có' %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                                <%= product.price ? product.price.toLocaleString('vi-VN') + '₫' : '0₫' %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                                <%= product.stockQuantity || 0 %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                                <% 
                                                    let statusClass = "bg-gray-100 text-gray-800";
                                                    let statusText = "Chưa xác định";
                                                    
                                                    if (product.stockStatus === "out_of_stock") {
                                                        statusClass = "bg-red-100 text-red-800";
                                                        statusText = "Hết hàng";
                                                    } else if (product.stockStatus === "low_stock") {
                                                        statusClass = "bg-yellow-100 text-yellow-800";
                                                        statusText = "Sắp hết hàng";
                                                    } else if (product.stockStatus === "medium_stock") {
                                                        statusClass = "bg-orange-100 text-orange-800";
                                                        statusText = "Ít hàng";
                                                    } else if (product.stockStatus === "in_stock") {
                                                        statusClass = "bg-green-100 text-green-800";
                                                        statusText = "Còn hàng";
                                                    }
                                                %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= statusClass %>">
                                                    <%= statusText %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex items-center space-x-2">
                                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" 
                                                       class="text-blue-600 hover:text-blue-900" title="Chỉnh sửa">
                                        <i class="ri-edit-line"></i>
                                    </a>
                                                    <form action="/admin/delete-product" method="POST" class="inline" 
                                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                                        <input type="hidden" name="productId" value="<%= product._id %>">
                                                        <button type="submit" class="text-red-600 hover:text-red-900" title="Xóa">
                                            <i class="ri-delete-bin-line"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                                    <% }); %>
                </tbody>
            </table>
        </div>
                    <% } %>
                    
                    <!-- Pagination -->
                    <% if (pagination && pagination.totalPages > 1) { %>
                        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
                            <div class="flex-1 flex justify-between sm:hidden">
                                <% if (pagination.currentPage > 1) { %>
                                    <a href="?page=<%= pagination.currentPage - 1 %>&search=<%= search %>&category=<%= category %>&brand=<%= brand %>&sort=<%= sort %>" 
                                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                        Trước
                                    </a>
                                <% } %>
                                <% if (pagination.currentPage < pagination.totalPages) { %>
                                    <a href="?page=<%= pagination.currentPage + 1 %>&search=<%= search %>&category=<%= category %>&brand=<%= brand %>&sort=<%= sort %>" 
                                       class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                        Sau
                                    </a>
                                <% } %>
                            </div>
                            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                                <div>
                                    <p class="text-sm text-gray-700">
                                        Hiển thị <span class="font-medium"><%= (pagination.currentPage - 1) * 5 + 1 %></span> đến 
                                        <span class="font-medium"><%= Math.min(pagination.currentPage * 5, pagination.totalProducts) %></span> trong tổng số 
                                        <span class="font-medium"><%= pagination.totalProducts %></span> sản phẩm
                                    </p>
                                </div>
                                <div>
                                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                                        <% if (pagination.currentPage > 1) { %>
                                            <a href="?page=<%= pagination.currentPage - 1 %>&search=<%= search %>&category=<%= category %>&brand=<%= brand %>&sort=<%= sort %>" 
                                               class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <i class="ri-arrow-left-s-line"></i>
                                            </a>
                                        <% } %>
                                        
                                        <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                                            <a href="?page=<%= i %>&search=<%= search %>&category=<%= category %>&brand=<%= brand %>&sort=<%= sort %>" 
                                               class="relative inline-flex items-center px-4 py-2 border text-sm font-medium <%= i === pagination.currentPage ? 'z-10 bg-blue-50 border-blue-500 text-blue-600' : 'bg-white border-gray-300 text-gray-500 hover:bg-gray-50' %>">
                                                <%= i %>
                                            </a>
                                        <% } %>
                                        
                                        <% if (pagination.currentPage < pagination.totalPages) { %>
                                            <a href="?page=<%= pagination.currentPage + 1 %>&search=<%= search %>&category=<%= category %>&brand=<%= brand %>&sort=<%= sort %>" 
                                               class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <i class="ri-arrow-right-s-line"></i>
                                            </a>
                                        <% } %>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </main>
                </div>
    </div>
    
    <!-- Scripts -->
    <script>
        // Auto-hide success/error messages after 5 seconds
        setTimeout(function() {
            const messages = document.querySelectorAll('.alert-message, .success-message, .error-message');
            messages.forEach(function(message) {
                message.style.transition = 'opacity 0.5s';
                message.style.opacity = '0';
                setTimeout(function() {
                    message.remove();
                    }, 500);
                });
        }, 5000);

        // User dropdown menu functionality
        document.addEventListener('DOMContentLoaded', function() {
            const userMenuButton = document.getElementById('user-menu-button');
            const userMenu = document.getElementById('user-menu');

            if (userMenuButton && userMenu) {
                // Toggle user menu
                userMenuButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    userMenu.classList.toggle('hidden');
                });
                
                // Close user menu when clicking outside
                document.addEventListener('click', function(event) {
                    if (!userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
                        userMenu.classList.add('hidden');
                    }
                });
                
                // Close user menu when pressing Escape
                document.addEventListener('keydown', function(event) {
                    if (event.key === 'Escape') {
                        userMenu.classList.add('hidden');
                    }
                });
            }
