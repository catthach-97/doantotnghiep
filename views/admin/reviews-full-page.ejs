<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle || 'Quản lý đánh giá' %> - Shoe Store</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Remix Icon -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css" rel="stylesheet">
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4f46e5',
                        'primary-dark': '#3730a3',
                        'sidebar-bg': '#1f2937',
                        'sidebar-hover': '#374151',
                        'content-bg': '#f8fafc'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-gradient-to-b from-blue-800 via-blue-900 to-blue-950 transform -translate-x-full transition-transform duration-300 ease-in-out lg:translate-x-0 shadow-2xl">
            <!-- Sidebar Header -->
            <div class="flex items-center justify-center h-16 bg-gradient-to-r from-blue-700 to-blue-800 border-b border-blue-600/50">
                <a href="/admin/dashboard" class="flex items-center space-x-2 text-white">
                    <i class="ri-store-2-line text-2xl text-blue-200"></i>
                    <span class="text-2xl font-bold">Shoe Store</span>
                </a>
            </div>
            
            <!-- Sidebar Navigation -->
            <nav class="mt-5 px-2">
                <div class="space-y-1">
                    <!-- Dashboard -->
                    <a href="/admin/dashboard" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 <%= path === '/admin/dashboard' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-gray-300 hover:bg-blue-700/50 hover:text-white' %>">
                        <i class="ri-dashboard-line mr-3 <%= path === '/admin/dashboard' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Dashboard
                    </a>

                    <!-- Products -->
                    <a href="/admin/products" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 <%= path === '/admin/products' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-gray-300 hover:bg-blue-700/50 hover:text-white' %>">
                        <i class="ri-shopping-bag-line mr-3 <%= path === '/admin/products' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Sản phẩm
                    </a>

                    <!-- Orders -->
                    <a href="/admin/orders" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 <%= path === '/admin/orders' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-gray-300 hover:bg-blue-700/50 hover:text-white' %>">
                        <i class="ri-file-list-3-line mr-3 <%= path === '/admin/orders' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Đơn hàng
                    </a>

                    <!-- Users -->
                    <a href="/admin/accounts" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 <%= path === '/admin/accounts' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-gray-300 hover:bg-blue-700/50 hover:text-white' %>">
                        <i class="ri-user-line mr-3 <%= path === '/admin/accounts' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Tài khoản
                    </a>

                    <!-- Categories -->
                    <a href="/admin/categories" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 <%= path === '/admin/categories' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-gray-300 hover:bg-blue-700/50 hover:text-white' %>">
                        <i class="ri-folder-line mr-3 <%= path === '/admin/categories' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Danh mục
                    </a>

                    <!-- Brands -->
                    <a href="/admin/brands" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 <%= path === '/admin/brands' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-gray-300 hover:bg-blue-700/50 hover:text-white' %>">
                        <i class="ri-award-line mr-3 <%= path === '/admin/brands' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Thương hiệu
                    </a>

                    <!-- Reviews -->
                    <a href="/admin/reviews" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 <%= path === '/admin/reviews' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-gray-300 hover:bg-blue-700/50 hover:text-white' %>">
                        <i class="ri-star-line mr-3 <%= path === '/admin/reviews' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Đánh giá
                    </a>

                    <!-- Slides -->
                    <a href="/admin/slides" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 <%= path === '/admin/slides' ? 'bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-lg font-semibold' : 'text-gray-300 hover:bg-blue-700/50 hover:text-white' %>">
                        <i class="ri-image-line mr-3 <%= path === '/admin/slides' ? 'text-white' : 'text-gray-400 group-hover:text-white' %>"></i>
                        Slide Banner
                    </a>
                </div>
            </nav>
            
            <!-- User Info -->
            <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-blue-600/50">
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-gradient-to-br from-blue-600 to-blue-700 rounded-full flex items-center justify-center">
                        <i class="ri-user-line text-white text-sm"></i>
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-white truncate"><%= user ? user.name : 'Admin' %></p>
                        <p class="text-xs text-gray-400 truncate"><%= user ? user.email : 'admin@example.com' %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 lg:ml-64">
            <!-- Top Bar -->
            <div class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 border-b border-gray-200 bg-white px-4 shadow-sm sm:gap-x-6 sm:px-6 lg:px-8">
                <!-- Mobile menu button -->
                <button type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden" id="sidebar-toggle">
                    <i class="ri-menu-line text-xl"></i>
                </button>

                <!-- Separator -->
                <div class="h-6 w-px bg-gray-200 lg:hidden" aria-hidden="true"></div>

                <!-- Page title -->
                <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6">
                    <div class="flex flex-1 items-center">
                        <h1 class="text-xl font-semibold text-gray-900">
                            Quản lý đánh giá
                        </h1>
                    </div>
                </div>

                <!-- Right side -->
                <div class="flex items-center gap-x-4 lg:gap-x-6">
                    <!-- Notifications -->
                    <button type="button" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500">
                        <i class="ri-notification-3-line text-xl"></i>
                    </button>

                    <!-- Separator -->
                    <div class="hidden lg:block lg:h-6 lg:w-px lg:bg-gray-200" aria-hidden="true"></div>

                    <!-- Profile dropdown -->
                    <div class="relative">
                        <button type="button" class="-m-1.5 flex items-center p-1.5" id="user-menu-button" onclick="toggleUserMenu()">
                            <span class="sr-only">Open user menu</span>
                            <div class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center">
                                <i class="ri-user-line text-white text-sm"></i>
                            </div>
                            <span class="hidden lg:flex lg:items-center">
                                <span class="ml-4 text-sm font-semibold leading-6 text-gray-900" aria-hidden="true">
                                    <%= user ? user.name : 'Admin' %>
                                </span>
                                <i class="ri-arrow-down-s-line ml-2 text-gray-400"></i>
                            </span>
                        </button>

                        <!-- Dropdown menu -->
                        <div class="absolute right-0 z-10 mt-2.5 w-32 origin-top-right rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none hidden"
                            id="user-menu">
                            <a href="/admin/profile"
                                class="block px-3 py-1 text-sm leading-6 text-gray-900 hover:bg-gray-50">
                                <i class="ri-user-line mr-2"></i>Profile
                            </a>
                            <a href="/admin/settings"
                                class="block px-3 py-1 text-sm leading-6 text-gray-900 hover:bg-gray-50">
                                <i class="ri-settings-line mr-2"></i>Settings
                            </a>
                            <form action="/logout" method="POST" class="block">
                                <button type="submit"
                                    class="w-full text-left px-3 py-1 text-sm leading-6 text-red-600 hover:bg-gray-50">
                                    <i class="ri-logout-box-line mr-2"></i>Đăng xuất
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <main class="p-6">
                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                    <!-- Total Reviews -->
                    <div class="bg-gradient-to-br from-blue-500 to-blue-600 overflow-hidden shadow-xl rounded-2xl card-hover gradient-card" style="--from-color: #3b82f6; --to-color: #1d4ed8;">
                        <div class="p-6">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <div class="w-12 h-12 bg-white bg-opacity-20 rounded-xl flex items-center justify-center backdrop-blur-sm icon-glow">
                                            <i class="ri-star-line text-white text-xl"></i>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <dl>
                                            <dt class="text-sm font-medium text-blue-100 truncate">Tổng đánh giá</dt>
                                            <dd class="text-2xl font-bold text-white"><%= stats.totalReviews || 0 %></dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="text-3xl text-white opacity-20">
                                        <i class="ri-star-line"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white bg-opacity-10 px-6 py-3 backdrop-blur-sm">
                            <div class="text-sm">
                                <span class="font-medium text-white">Tất cả đánh giá</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Approved Reviews -->
                    <div class="bg-gradient-to-br from-green-500 to-emerald-600 overflow-hidden shadow-xl rounded-2xl card-hover gradient-card" style="--from-color: #10b981; --to-color: #059669;">
                        <div class="p-6">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <div class="w-12 h-12 bg-white bg-opacity-20 rounded-xl flex items-center justify-center backdrop-blur-sm icon-glow">
                                            <i class="ri-checkbox-circle-line text-white text-xl"></i>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <dl>
                                            <dt class="text-sm font-medium text-green-100 truncate">Đã duyệt</dt>
                                            <dd class="text-2xl font-bold text-white"><%= stats.approvedReviews || 0 %></dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="text-3xl text-white opacity-20">
                                        <i class="ri-checkbox-circle-line"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white bg-opacity-10 px-6 py-3 backdrop-blur-sm">
                            <div class="text-sm">
                                <span class="font-medium text-white">Đã được phê duyệt</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Pending Reviews -->
                    <div class="bg-gradient-to-br from-yellow-500 to-orange-500 overflow-hidden shadow-xl rounded-2xl card-hover gradient-card" style="--from-color: #f59e0b; --to-color: #ea580c;">
                        <div class="p-6">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <div class="w-12 h-12 bg-white bg-opacity-20 rounded-xl flex items-center justify-center backdrop-blur-sm icon-glow">
                                            <i class="ri-time-line text-white text-xl"></i>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <dl>
                                            <dt class="text-sm font-medium text-yellow-100 truncate">Chờ duyệt</dt>
                                            <dd class="text-2xl font-bold text-white"><%= stats.pendingReviews || 0 %></dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="text-3xl text-white opacity-20">
                                        <i class="ri-time-line"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white bg-opacity-10 px-6 py-3 backdrop-blur-sm">
                            <div class="text-sm">
                                <span class="font-medium text-white">Cần xem xét</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Average Rating -->
                    <div class="bg-gradient-to-br from-purple-500 to-pink-500 overflow-hidden shadow-xl rounded-2xl card-hover gradient-card" style="--from-color: #8b5cf6; --to-color: #ec4899;">
                        <div class="p-6">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0">
                                        <div class="w-12 h-12 bg-white bg-opacity-20 rounded-xl flex items-center justify-center backdrop-blur-sm icon-glow">
                                            <i class="ri-star-fill text-white text-xl"></i>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <dl>
                                            <dt class="text-sm font-medium text-purple-100 truncate">Điểm TB</dt>
                                            <dd class="text-2xl font-bold text-white"><%= stats.averageRating || 0 %></dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <div class="text-3xl text-white opacity-20">
                                        <i class="ri-star-fill"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white bg-opacity-10 px-6 py-3 backdrop-blur-sm">
                            <div class="text-sm">
                                <span class="font-medium text-white">Đánh giá trung bình</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="bg-white rounded-lg shadow mb-6">
                    <div class="p-6">
                        <form method="GET" class="grid grid-cols-1 md:grid-cols-6 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Tìm kiếm</label>
                                <input type="text" name="search" value="<%= search || '' %>" 
                                       placeholder="Tên, email, nội dung..." 
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Sản phẩm</label>
                                <input type="text" name="product" value="<%= product || '' %>" 
                                       placeholder="Tên sản phẩm..." 
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Đánh giá</label>
                                <select name="rating" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="">Tất cả</option>
                                    <option value="5" <%= rating === '5' ? 'selected' : '' %>>5 sao</option>
                                    <option value="4" <%= rating === '4' ? 'selected' : '' %>>4 sao</option>
                                    <option value="3" <%= rating === '3' ? 'selected' : '' %>>3 sao</option>
                                    <option value="2" <%= rating === '2' ? 'selected' : '' %>>2 sao</option>
                                    <option value="1" <%= rating === '1' ? 'selected' : '' %>>1 sao</option>
                                </select>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Trạng thái</label>
                                <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="">Tất cả</option>
                                    <option value="approved" <%= status === 'approved' ? 'selected' : '' %>>Đã duyệt</option>
                                    <option value="pending" <%= status === 'pending' ? 'selected' : '' %>>Chờ duyệt</option>
                                </select>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Từ ngày</label>
                                <input type="date" name="dateFrom" value="<%= dateFrom || '' %>" 
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Đến ngày</label>
                                <input type="date" name="dateTo" value="<%= dateTo || '' %>" 
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                            
                            <div class="md:col-span-6 flex gap-2">
                                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <i class="ri-search-line mr-2"></i>
                                    Tìm kiếm
                                </button>
                                <a href="/admin/reviews" class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500">
                                    <i class="ri-refresh-line mr-2"></i>
                                    Làm mới
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                

                <!-- Reviews Table -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900">Danh sách đánh giá</h3>
                                <div class="flex items-center space-x-2 mt-1">
                                    <span class="text-sm text-gray-500">Tổng: <%= totalReviews || 0 %> đánh giá</span>
                                    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                                        <span class="text-xs text-gray-400">(Trang <%= currentPage || 1 %> / <%= totalPages %>)</span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khách hàng</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sản phẩm</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Đánh giá</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nội dung</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày tạo</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% if (reviews && reviews.length > 0) { %>
                                    <% reviews.forEach((review, index) => { %>
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-6 py-4">
                                                <div class="flex items-center">
                                                    <div class="flex-shrink-0 h-10 w-10">
                                                        <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                                                            <span class="text-sm font-medium text-gray-700">
                                                                <%= (review.userName || 'N/A').charAt(0).toUpperCase() %>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="ml-4">
                                                        <div class="text-sm font-medium text-gray-900"><%= review.userName || 'N/A' %></div>
                                                        <div class="text-sm text-gray-500"><%= review.userEmail || 'N/A' %></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="flex items-center">
                                                    <div class="flex-shrink-0 h-10 w-10">
                                                        <img class="h-10 w-10 rounded-lg object-cover" 
                                                             src="<%= review.productImage || '/images/default-product.jpg' %>" 
                                                             alt="<%= review.productTitle %>">
                                                    </div>
                                                    <div class="ml-4 min-w-0 flex-1">
                                                        <div class="text-sm font-medium text-gray-900 truncate"><%= review.productTitle %></div>
                                                        <div class="text-sm text-gray-500 truncate"><%= review.productBrand || 'N/A' %></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <% for (let i = 0; i < 5; i++) { %>
                                                        <svg class="w-4 h-4 <%= i < review.rating ? 'text-yellow-400' : 'text-gray-300' %>" 
                                                             fill="currentColor" viewBox="0 0 20 20">
                                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                                        </svg>
                                                    <% } %>
                                                    <span class="ml-2 text-sm text-gray-600">(<%= review.rating %>/5)</span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="text-sm text-gray-900 max-w-xs truncate" title="<%= review.comment %>">
